{
  "name": "ai-mandi",
  "version": "1.0.0",
  "description": "AI Mandi - Multilingual Smart Market Assistant",
  "private": true,
  "scripts": {
    "install:all": "npm install --prefix backend && npm install --prefix frontend",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "test:backend": "npm test --prefix backend",
    "test:frontend": "npm test --prefix frontend",
    "test": "npm run test:backend && npm run test:frontend",
    "build": "npm run build --prefix frontend",
    "validate": "node validate-setup.js",
    "setup-check": "chmod +x setup-check.sh && ./setup-check.sh"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": [
    "ai",
    "market",
    "multilingual",
    "translation",
    "price-discovery",
    "negotiation",
    "hackathon"
  ],
  "author": "AI Mandi Team",
  "license": "MIT"
}